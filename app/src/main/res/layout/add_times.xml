<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6EBE45"
    tools:context=".AddPillsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/before"
            android:layout_width="179dp"
            android:layout_height="84dp"
            android:layout_marginBottom="288dp"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:text="Προηγούμενη\nσελίδα"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.121"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/beforeImage"
            android:layout_width="216dp"
            android:layout_height="103dp"
            android:layout_marginBottom="388dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.021"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/input_message"
            android:layout_width="236dp"
            android:layout_height="140dp"
            android:layout_marginBottom="620dp"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="182dp"
            android:layout_height="49dp"
            android:layout_marginBottom="56dp"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:text="Έξοδος"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/next"
            android:layout_width="170dp"
            android:layout_height="106dp"
            android:layout_marginBottom="276dp"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:text="Επόμενη\nσελίδα"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/exit_text"
            android:layout_width="226dp"
            android:layout_height="127dp"
            android:layout_marginBottom="124dp"
            android:background="@drawable/joke_background"
            android:fontFamily="@font/noto_sans_bold"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/emergency_exit" />

        <ImageView
            android:layout_width="103dp"
            android:layout_height="115dp"
            android:layout_marginBottom="808dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/hospital" />

        <ImageView
            android:id="@+id/nextImage"
            android:layout_width="216dp"
            android:layout_height="103dp"
            android:layout_marginBottom="388dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/right" />

        <CheckBox
            android:id="@+id/morning"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="544dp"
            android:button="@drawable/custom_checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mesimeri"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/morning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Πρωί"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/morning"
            app:layout_constraintStart_toStartOf="@+id/morning"
            app:layout_constraintEnd_toEndOf="@+id/morning" />

        <CheckBox
            android:id="@+id/mesimeri"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="544dp"
            android:button="@drawable/custom_checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/evening"
            app:layout_constraintStart_toEndOf="@+id/morning" />

        <TextView
            android:id="@+id/mesimeri_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="Μεσημέρι"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/mesimeri"
            app:layout_constraintHorizontal_bias="0.843"
            app:layout_constraintStart_toStartOf="@+id/mesimeri"
            app:layout_constraintTop_toBottomOf="@+id/mesimeri" />

        <CheckBox
            android:id="@+id/evening"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="544dp"
            android:button="@drawable/custom_checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/night"
            app:layout_constraintStart_toEndOf="@+id/mesimeri"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/evening_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="Απόγευμα"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/evening"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="@+id/evening"
            app:layout_constraintTop_toBottomOf="@+id/evening" />

        <CheckBox
            android:id="@+id/night"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="544dp"
            android:button="@drawable/custom_checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/evening"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/night_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="Βράδυ"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/night"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/night"
            app:layout_constraintTop_toBottomOf="@+id/night" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
